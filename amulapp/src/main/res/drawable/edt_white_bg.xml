<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="2dp"
        android:left="2dp"
        android:right="2dp"
        android:bottom="2dp">
        <selector >
            <item >
                <shape
                    android:shape="rectangle">
                    <corners android:radius="5dp" />
                    <stroke
                        android:width="1dp"
                        android:color="@android:color/black"/>
                </shape>
            </item>
        </selector>
    </item>
</layer-list>

